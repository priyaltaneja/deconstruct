# Deconstruct Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database (Supabase)
# =============================================================================
# Get from `supabase start` or your Supabase dashboard
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# API Server Configuration
# =============================================================================
# Port for the API server
API_PORT=8000

# CORS allowed origins (comma-separated)
# Production: Set to your frontend domain only
# Development: Leave empty to use defaults (localhost:3000, localhost:5173)
CORS_ORIGINS=

# =============================================================================
# Extraction Configuration
# =============================================================================
# Complexity threshold for System 1/System 2 routing (0.0 - 1.0)
# Higher values route more documents to System 2 (Claude)
COMPLEXITY_THRESHOLD=0.8

# System 2 model configuration
SYSTEM2_MODEL=claude-opus-4-5-20251101
SYSTEM2_MAX_TOKENS=16000
SYSTEM2_TEMPERATURE=0.0

# Image processing DPI
SYSTEM1_DPI=200
SYSTEM2_DPI=300

# Maximum pages to process for extraction
MAX_PAGES_FOR_EXTRACTION=10

# =============================================================================
# Timeouts (seconds)
# =============================================================================
SYSTEM1_TIMEOUT=300
SYSTEM2_TIMEOUT=900
BATCH_TIMEOUT=1800
SUBPROCESS_TIMEOUT=900

# =============================================================================
# File Limits
# =============================================================================
MAX_FILE_SIZE_MB=50

# =============================================================================
# API Keys (stored in Modal secrets, not here)
# =============================================================================
# Run these commands to set them up:
#   modal secret create anthropic-api-key ANTHROPIC_API_KEY=sk-ant-...
#   modal secret create huggingface HF_TOKEN=hf_...
